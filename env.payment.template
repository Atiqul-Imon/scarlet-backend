# Payment Gateway Configuration Template
# Copy this to your .env file and update with your actual credentials

# ===========================================
# bKash Payment Gateway Configuration
# ===========================================
# Get these from bKash Developer Portal: https://developer.bkash.com/
BKASH_APP_KEY=dummy_app_key
BKASH_APP_SECRET=dummy_app_secret
BKASH_USERNAME=dummy_username
BKASH_PASSWORD=dummy_password
BKASH_SANDBOX=true
BKASH_BASE_URL=https://tokenized.sandbox.bkash.com
BKASH_CALLBACK_URL=http://localhost:3000/payment/callback
BKASH_MERCHANT_ID=dummy_merchant_id

# ===========================================
# Nagad Payment Gateway Configuration
# ===========================================
# Get these from Nagad Developer Portal: https://developer.mynagad.com/
NAGAD_MERCHANT_ID=dummy_merchant_id
NAGAD_MERCHANT_PRIVATE_KEY=dummy_private_key
NAGAD_PUBLIC_KEY=dummy_public_key
NAGAD_SANDBOX=true
NAGAD_BASE_URL=https://sandbox.mynagad.com:10060
NAGAD_CALLBACK_URL=http://localhost:3000/payment/callback

# ===========================================
# Rocket Payment Gateway Configuration
# ===========================================
